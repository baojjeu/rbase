<% set_meta_tags title: @post.title,
                description: @post.content,
                keywords: @post.tags.map(&:name_zh),
                canonical: post_url(@post),
                og: {
                  image: @post.cover.url
                } %>
<div class="post-content">
  <h1>Blog Post Title</h1>

  <p class="lead">
  by <a href="#"><%= @post.user.name %></a>
  </p>

  <hr>

  <p><i class="glyphicon glyphicon-time"></i> Posted on <%= @post.created_at %></p>

  <hr>

  <%= image_tag @post.cover, class: "img-responsive" %>
  <hr>

  <p class="lead">
    <%= raw(@post.content) %>
  </p>

  <hr>

  <div class="media">
    <div class="media-body">
        <div class="fb-comments" data-href="<%= request.original_url  %>" data-numposts="10"
       data-width="100%" data-colorscheme="light"></div>
    </div>
  </div>  
</div>
