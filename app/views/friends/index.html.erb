<div class="row">
  <% @user.friends.each do |friend| %>
  <div class="col-sm-6 col-md-3">  
    <div class="thumbnail">
      <%= image_tag friend.picture, class: "photo" %>
      <div class="caption">
        <%= link_to "https://www.facebook.com/" + friend.identifier, target: "blank" do %>
          <h4><%= friend.name %></h4>
        <% end %>
        <%= link_to "偷偷愛慕他", like_friend_path(friend.identifier), class: "btn btn-primary likes", method: :post %>
      </div>
    </div>
  </div>
  <% end %>
</div>
